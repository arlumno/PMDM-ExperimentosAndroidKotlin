<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <!-- Añadido un botón para asignarles el evento de cambio
 de activity -->

    <Button
        android:id="@+id/irCalculadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="104dp"
        android:text="Calculadora"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/irContadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contadores"
        app:layout_constraintBottom_toTopOf="@+id/irCalculadora"
        app:layout_constraintEnd_toEndOf="@+id/irCalculadora" />

    <Button
        android:id="@+id/botonTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO Pulsar"
        app:layout_constraintBottom_toTopOf="@+id/irContadores"
        app:layout_constraintEnd_toEndOf="@+id/irCalculadora" />
